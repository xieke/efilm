function build_seat(obj,x,y,select_arr){
	var html_i="";//创建座位表格
	for(var i=0;i<y;i++){
		var html_j="";
		for(var j=0;j<x;j++){
			html_j+="<td x='"+j+"' y='"+i+"'>&nbsp;</td>";
		}
		html_i+="<tr>"+html_j+"</tr>";
	}
	obj.html("<table>"+html_i+"</table>");
	$.each(select_arr,function(y,v){//导入座位数据
		$.each(v,function(x,v2){
			$("[x='"+x+"'][y='"+y+"']").addClass("t"+v2.type);
		});
	});
	$("#seat .t1").click(function(){//绑定选座事件
		//跳过禁选
		if($(this).hasClass("t4"))return false;
	
	
	
		$(this).toggleClass("t3");

		//仅连续座位可选
			//该行有值
				//1、禁选该行
				//2、遍历可选两侧
			//该行无值
				//1、可选该行
		var objs=$(this).parent().find(".t3");
		if(objs.length>0){
			$(this).parent().find("td.t1").not(".t3").addClass("t4");
			$(this).parent().find(".t3").each(function(index, element) {
				var x=$(element).attr("x");
				if($(element).prev().hasClass("t1")&&!$(element).prev().hasClass("t3"))$(element).prev().removeClass("t4");
				if($(element).next().hasClass("t1")&&!$(element).next().hasClass("t3"))$(element).next().removeClass("t4");
			});
		}else{
			$(this).parent().find("td").removeClass("t4");
		}

		refresh_seat();
	})
}
function refresh_seat(){//刷新选座事件后统计信息
	var mart_price=75;//市场价
	var now_price=50;//会员价
	var num=$("#seat .t3").length;//当前选择座位数
	$("#num").html(num);
	$("#mart").html(num*mart_price);
	$("#save").html(num*(mart_price-now_price));
	$("#now").html(num*now_price);
	var html_temp="";
	$("#seat .t3").each(function(index, element) {//座位标记
        html_temp+="<span>"+($(this).attr("y")*1+1)+"排"+($(this).attr("x")*1+1)+"座"+"</span>";		
    });
	$("#seat_show").html(html_temp);
}
